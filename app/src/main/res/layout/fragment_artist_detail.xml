<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/fragment_artist_detail_name"
        android:layout_width="match_parent"
        android:textSize="42sp"
        android:gravity="center_horizontal"
        android:layout_height="wrap_content"/>

    <TextView
        android:id="@+id/fragment_artist_detail_genre"
        android:layout_width="match_parent"
        android:gravity="center_horizontal"
        android:layout_height="wrap_content"/>

    <TextView
        android:id="@+id/fragment_artist_detail_count"
        android:layout_width="match_parent"
        android:gravity="center_horizontal"
        android:layout_height="wrap_content"/>

    <TextView
        android:id="@+id/fragment_artist_detail_url"
        android:layout_width="match_parent"
        android:gravity="center_horizontal"
        android:layout_height="wrap_content"/>

    <TextView
        android:id="@+id/fragment_artist_detail_description"
        android:layout_width="match_parent"
        android:gravity="center_horizontal"
        android:layout_height="wrap_content"/>

</LinearLayout>