<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

    <ImageView
        android:id="@+id/fragment_artist_photo_image_cover"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:adjustViewBounds="true"
        android:contentDescription="@string/fragment_artist_photo_image_cover_description"
        android:scaleType="fitCenter"/>

    <Button
        android:id="@+id/fragment_artist_photo_button_more"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_alignParentBottom="true"
        android:alpha="0.75"
        android:text="@string/fragment_artist_photo_button_more"/>

</RelativeLayout>